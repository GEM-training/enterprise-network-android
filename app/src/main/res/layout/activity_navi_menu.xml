<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/mrl1"
                android:layout_width="@dimen/navigation_menu_sale_width"
                android:layout_height="@dimen/navigation_menu_sale_width"
                app:mrl_rippleDimension="10dp"
                app:mrl_rippleOverlay="true"
                >
                <ImageView
                    android:id="@+id/navigation_sale_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/sales"
                    />
            </com.balysv.materialripple.MaterialRippleLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/navigation_sale_bt"
                android:textColor="@color/white"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ll1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="@dimen/navigation_menu_sale_width"
                android:layout_height="@dimen/navigation_menu_sale_width"
                app:mrl_rippleDimension="10dp"
                app:mrl_rippleOverlay="true"
                >
                <ImageView
                    android:id="@+id/navigation_customer_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/customers" />
            </com.balysv.materialripple.MaterialRippleLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/navigation_customer"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>