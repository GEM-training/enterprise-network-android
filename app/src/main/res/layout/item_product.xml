<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_layout_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium"
    android:elevation="@dimen/cardview_default_elevation"
    android:foreground="?selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_picture_iv"
                android:layout_width="@dimen/picture_width"
                android:layout_height="@dimen/picture_height"
                android:contentDescription="@string/default_picture"
                android:src="@mipmap/default_profile" />

            <TextView
                android:id="@+id/product_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/product_picture_iv"
                android:text="@string/username_sample"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_name_tv"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_toRightOf="@id/product_picture_iv"
                android:text="@string/sample_address"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>

</android.support.v7.widget.CardView>